<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aftersignupbg"
    tools:context=".paypal">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="412dp"
        android:layout_height="395dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rightmark" />

    <EditText
        android:id="@+id/paypallink"
        android:layout_width="249dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/plaintextfigure"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:hint="ex: Paypal.me/eflsha"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points500" />

    <TextView
        android:id="@+id/points500"
        android:layout_width="213dp"
        android:layout_height="29dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Please enter your PayPal link"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#216E5A"
        android:fontFamily="@font/inter_bold"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paypallink" />

    <TextView
        android:id="@+id/money"
        android:layout_width="213dp"
        android:layout_height="29dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>